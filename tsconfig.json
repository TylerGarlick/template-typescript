{
  "extends": "@sindresorhus/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "target": "ES2020",
    "module": "CommonJS",
    "sourceMap": true,
    "moduleResolution": "Node",
    "lib": [
      "dom",
      "es6",
      "ES2015",
      "ES2017",
      "ES2018",
      "ES2020"
    ]
  },
  "include": [
    "src/**/*",
    "examples/**/*",
    "docs/**/*",
    "test/**/*"
  ],
  "exclude": [
    "dist/**/*",
    "node_modules"
  ]
}